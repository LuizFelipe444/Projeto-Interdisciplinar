@model web_app.Models.Login

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link href="~/css/footer.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body class="body-login">
    <div class="login-container">
        <div class="login-form">
            <h4>Login</h4>
            <form asp-action="Login" class="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="usuario" class="control-label"></label>
                    <input asp-for="usuario" class="form-control" />
                    <span asp-validation-for="usuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="senha" class="control-label"></label>
                    <input asp-for="senha" class="form-control" />
                    <span asp-validation-for="senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Logar" class="btn btn-primary" />
                </div>
            </form>
            <div class="create-account">
                <p>Não tem uma conta? Crie uma agora:</p>
                <a a asp-controller="Login" asp-action="Create" class="btn btn-secondary">Criar Conta</a>
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <h3 class="footer-title">Agenda de Jogos</h3>
                <p class="footer-description">Acompanhe a programação dos jogos de futebol</p>
            </div>
            <div class="footer-links">
                <a href="#" class="footer-link">Futebol</a>
                <a href="#" class="footer-link">Brasileirão</a>
                <a href="#" class="footer-link">Libertadores</a>
                <a href="#" class="footer-link">Outros Esportes</a>
            </div>
        </div>
        <div class="footer-bottom">
            <p class="footer-bottom-text">© 2023 Futebol Digital. Todos os direitos reservados.</p>
        </div>
    </footer>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
