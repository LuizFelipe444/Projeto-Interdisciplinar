    <script>
        vitoriaSantos = () => {
            var sanPts = document.getElementById("santosPts")
            var sanVit = document.getElementById("vitSantos")
            pontos += 3
            vitorias += 1
            sanPts.innerHTML = pontos
            sanVit.innerHTML = vitorias
        }

        var pontos = 0
        var vitorias = 0
        var empates = 0
        var derrotas = 0

        empateSantos = () => {
            var sanPts = document.getElementById("santosPts")
            var sanEmp = document.getElementById("empSantos")
            pontos += 1
            empates += 1
            sanPts.innerHTML = pontos
            sanEmp.innerHTML = empates

        }
        derrotaSantos = () => {
            var sanDer = document.getElementById("derSantos")
            derrotas += 1
            sanDer.innerHTML = derrotas
        }
        reset = () => {
            var sanVit = document.getElementById("vitSantos")
            var sanDer = document.getElementById("derSantos")
            var sanEmp = document.getElementById("empSantos")
            var sanPts = document.getElementById("santosPts")
             pontos = 0
             vitorias = 0
             empates = 0
             derrotas = 0

            sanVit.innerHTML = vitorias
            sanDer.innerHTML = derrotas
            sanEmp.innerHTML = empates
            sanPts.innerHTML = pontos

        }
    </script>
